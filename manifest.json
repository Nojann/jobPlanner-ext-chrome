{
  "manifest_version": 3,
  "name": "JobPlanner",
  "description": "A web extension that helps you plan your job search",
  "version": "1.0",
  "icons": {
    // "16": "icon-16.png",
    // "48": "icon-48.png",
    // "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
    //"default_icon": "icon-48.png"
  },
  "host_permissions": ["https://jobplanner-515cae46a2f2.herokuapp.com/"],
  "permissions": ["activeTab", "scripting", "cookies"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
